@{
    Layout = null;
    ViewBag.Title = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Page</title>
    <link rel="stylesheet" href="~/Styles/registerStyle.css">
    <script>
        function onRoleChange() {
            const role = document.getElementById("roleSelect").value;
            const extraInputContainer = document.getElementById("extraInputContainer");
            const extraInput = document.getElementById("extraInput");

            // Role'e göre ekstra alanı göster veya gizle
            if (role === "student") {
                extraInputContainer.style.display = "block";
                extraInput.placeholder = "Enter Student Name";
                extraInput.required = true;
            } else if (role === "instructor") {
                extraInputContainer.style.display = "block";
                extraInput.placeholder = "Enter Specialization";
                extraInput.required = true;
            } else {
                extraInputContainer.style.display = "none";
                extraInput.name = "";
                extraInput.required = false;
            }
        }
    </script>
</head>
<body>
    <div class="register-container">
        <h1 class="title">TITLE</h1>
        <form class="register-form" method="post" action="@Url.Action("UserRegister")">
            <input type="text" name="fullName" placeholder="Full Name" required>
            <input type="email" name="email" placeholder="Email" required>
            <input type="password" name="password" placeholder="Password" required>
            <input type="password" name="confirmPassword" placeholder="Confirm Password" required>

            <div id="extraInputContainer" style="display: none;">
                <input type="text" id="extraInput" name="extraInput" placeholder="" />
            </div>

            <a href="@Url.Action("Login", "Home")" class="link">Already have an account</a>

            <select id="roleSelect" name="role" onchange="onRoleChange()" required>
                <option value="default">Role</option>
                <option value="admin">Admin</option>
                <option value="student">Student</option>
                <option value="instructor">Instructor</option>
            </select>

            <button type="submit" class="register-button">REGISTER</button>
        </form>
    </div>
</body>
</html>
