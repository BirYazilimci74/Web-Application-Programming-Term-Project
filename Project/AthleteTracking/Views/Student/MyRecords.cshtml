
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "MyRecords";
}

<canvas id="developmentChart"></canvas>

<script>
    // JSON verileri almak için fetch kullanıyoruz
    fetch(`/Student/MyRecordsChart`)
        .then(response => response.json())
        .then(data => {
            const labels = data.map(record => record.Date); // Tarihler
            const heights = data.map(record => record.Height); // Boylar
            const weights = data.map(record => record.Weight); // Kilolar
            const bmis = data.map(record => record.BMI); // BMI

            console.log(data)
            // Chart.js ile grafiği oluşturuyoruz
            const ctx = document.getElementById('developmentChart').getContext('2d');
            new Chart(ctx, {
                type: 'line', // Çizgi grafik
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Height (cm)',
                            data: heights,
                            borderColor: 'rgba(75, 192, 192, 1)',
                            backgroundColor: 'rgba(75, 192, 192, 0.2)',
                            fill: false
                        },
                        {
                            label: 'Weight (kg)',
                            data: weights,
                            borderColor: 'rgba(255, 99, 132, 1)',
                            backgroundColor: 'rgba(255, 99, 132, 0.2)',
                            fill: false
                        },
                        {
                            label: 'BMI',
                            data: bmis,
                            borderColor: 'rgba(54, 162, 235, 1)',
                            backgroundColor: 'rgba(54, 162, 235, 0.2)',
                            fill: false
                        }
                    ]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'Student Development Over Time'
                        }
                    },
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Date'
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Values'
                            }
                        }
                    }
                }
            });
        })
    .catch(error => console.error('Error fetching data:', error));
</script>
